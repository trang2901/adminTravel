<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản Lý /</span>
   Loại Tour</h4>
  <!-- Table -->
  <div class="card">
    <button type="button" class="btn rounded-pill btn-primary" style="width: 140px; margin: 4px 0 16px 20px"
            data-bs-toggle="modal" data-bs-target="#addFormModal">
            <i class="bx bx-add-to-queue"></i>&nbsp;&nbsp;Thêm
        </button>
    <h5 class="card-header text-info">Danh Sách Loại Tour</h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th class="text-primary">Tên loại tour</th>
            {{!-- <th class="text-primary">Số Điện Thoại</th>
            <th class="text-primary">Email</th>
            <th class="text-primary">Số Tour Đã Đặt</th>
            <th class="text-primary">Hành Động</th> --}}
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          {{#each loaitours}}
          <tr>
            <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
              <strong>{{this.ten_loai_tour}}</strong>
            </td>
            {{!-- <td>........</td>
            <td>.........</td>
            <td><span class="badge bg-label-primary me-1">............</span></td> --}}
            <td>
              <div class="dropdown">
                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                  <i class="bx bx-dots-vertical-rounded"></i>
                </button>
                <div class="dropdown-menu">
                  {{!-- <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modalTourTG{{@index}}"><i
                      class="bx bx-file-find"></i> Tour Đã Đặt</a> --}}
                  <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modal-delete"data-id="{{this._id}}" data-name="{{this.ten_loai_tour}}"
                                        data-collection="loaitour"><i
                      class="bx bx-trash me-1"></i> Xóa</a>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}




        </tbody>
      </table>
    </div>
  </div>
  <!-- /Table -->


  <!-- Modal Delete-->
<div class="modal fade " id="modal-delete" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalToggleLabel">
                    Xác Nhận Xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa địa điểm này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">
                    Close
                </button>
                <button id="btn-delete" class="btn btn-danger" data-bs-toggle="modal" data-bs-dismiss="modal">
                    Xóa
                </button>
            </div>
        </div>
    </div>
</div>

{{!-- Delete hidden form --}}
<form action="" method="post" name="delete-form">
</form>

</div>

<form method="post" action="/loaitour" class="modal fade" id="addFormModal" tabindex="-1" style="display: none" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel3">
                    Tạo Loại Tour
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body card mb-4">
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Tên loại tour</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i
                                        class="bx bx-user"></i></span>

                                <input name="ten_loai_tour" type="text" class="form-control" id="basic-icon-default-fullname"
                                    placeholder="John Doe" aria-label="John Doe"
                                    aria-describedby="basic-icon-default-fullname2">

                            </div>
                        </div>
                     
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button type="submit" class="btn btn-primary">
                    Tạo
                </button>
            </div>
        </div>
    </div>
</form>