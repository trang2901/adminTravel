                  <option value="{{this._id}}">{{this.ten}}</option>
                  {{/each}}
                </select>
              </div>
            </div>


            <div class="mb-3">
              <label class="form-label" for="ngay_o">Ngày ở</label>
              <div class="input-group input-group-merge">
                <span class="input-group-text"><i class="bx bx-time"></i></span>
                <input type="text" class="form-control" placeholder="" id="ngay_o" name="ngay_o" value="3" />
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="dich-vu">Dịch Vụ</label>
              <div class="input-group input-group-merge">
                <span class="input-group-text"><i class="bx bx-hotel"></i></span>
                <input type="text" class="form-control" placeholder="Khách Sạn" id="dich-vu" name="dich_vu" />
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="dich-vu">Chi Tiết</label>
