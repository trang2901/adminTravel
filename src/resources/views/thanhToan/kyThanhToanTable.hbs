<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Quản Lý /</span>
    Kỳ Thanh Toán
  </h4>
  <!-- Table -->
  <div class="card">
    <h5 class="card-header text-info">Danh Sách Kỳ Thanh Toán</h5>
    <h5 class="card-body text-primary">
      <i class="bx bxs-user"></i>{{thanhtoan.id_khach_hang.ho_ten}}
      <br /><br />
      <i class="bx bx-location-plus"></i>{{thanhtoan.id_tour.ten}}
    </h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            <th class="text-primary">STT</th>
            <th class="text-primary">Ngày Hết Hạn</th>
            <th class="text-primary">Thành Tiền (VND)</th>
            <th class="text-primary">Hình Thức Thanh Toán</th>
            <th class="text-primary">Trạng Thái</th>
            <th class="text-primary">Hành Động</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          {{#each thanhtoan.ky_thanh_toan}}
          <tr>
            <td>
              <i class="fab fa-angular fa-lg text-danger me-3"></i>
              <strong>{{sum @index 1}}</strong>
            </td>
            <td>{{this.ngay_het_han}}</td>
            <td>{{this.thanh_tien}}</td>
            <td>{{this.hinh_thuc}}</td>
            <td>
              <span class="badge 
              {{#if (ifEq this.trang_thai "Chưa thanh toán")}}
              bg-label-danger
              {{else}}
              bg-label-primary
              {{/if}}
               me-1">
                {{this.trang_thai}}
                </span>
            </td>
            <td>
              <div class="dropdown">
                <button
                  type="button"
                  class="btn p-0 dropdown-toggle hide-arrow"
                  data-bs-toggle="dropdown"
                >
                  <i class="bx bx-dots-vertical-rounded"></i>
                </button>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="javascript:void(0);"><i
                      class="bx bx-edit"
                    ></i>
                    Gia Hạn</a>
                  <a class="dropdown-item" href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#modal-delete" data-id="{{this._id}}" data-name="kỳ thanh toán này"
                    data-collection="kythanhtoan"><i
                      class="bx bx-trash me-1" 
                    ></i>
                    Xóa</a>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <!-- /Table -->
</div>

<!-- Modal Delete-->
<div class="modal fade " id="modal-delete" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalToggleLabel">
          Xác Nhận Xóa
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa địa điểm này không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">
          Close
        </button>
        <button id="btn-delete" class="btn btn-danger" data-bs-toggle="modal" data-bs-dismiss="modal">
          Xóa
        </button>
      </div>
    </div>
  </div>
</div>

